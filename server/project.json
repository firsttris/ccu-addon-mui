{
  "name": "server",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "server",
  "projectType": "application",
  "tags": ["type:backend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "bun install && bun run build",
        "cwd": "server"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run start",
        "cwd": "server"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun install",
        "cwd": "server"
      }
    }
  }
}
